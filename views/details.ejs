<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Details || Employees </title>
</head>
<body>
    <nav>
        <ul>
            <li>
                <a href="/employees">Homepage</a>
            </li>
            <li>
                <a href="/create">Add employee </a>
            </li>
        </ul>
    </nav>
    <h1>
        Details Information about this Employees
    </h1>
    <div>
    <h2><%= employee.name %></h2>
            <h3><%= employee.role %></h3>
            <h3><%= employee.age %></h3>
            <a  class="del" data-item="<%=employee._id %>"><button>Delete</button></a></div>
       
       <script>
        const trash= document.querySelector('.del')
        
        trash.addEventListener ('click', () => {
        //    console.log("working")
        const url = `/employee/${trash.dataset.item}`;
        console.log(url);
            fetch(url, {
                method: 'DELETE',
            })
            .then((response)=>response.json())
            .then((data)=>{
                // console.log(data);
                // {redirect: '/employees'}
                window.location.href = data.redirect;
            }).catch((err)=>console.log(err));
       });
        </script>
</body>
</html>